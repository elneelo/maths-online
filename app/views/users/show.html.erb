<% provide(:title, 'Profile Information') %>
<h1><%=@user.name%> Profile Information</h1>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
<%
=begin %>
        <%= gravatar_for @user %>
<%
=end %>
        <p>Name: <%= @user.name %></p>
        <p>Email: <%= @user.email %></p>
        <p>Contact Number: <%= @user.contact_number %></p>
        <p>Current Maths Level: <%= @user.level_id %></p>
        <p>Strand Preference: <%= @user.strand_id %></p>
    </section>
  </aside>
</div>